# 彩票AI预测系统环境配置模板
# 复制此文件为 .env 并根据需要修改配置

# 基础配置
PROJECT_NAME=predict_lottery_ticket
VERSION=2.0.0

# 数据路径配置
DATA_PATH=./data
MODEL_PATH=./model
PREDICT_PATH=./predict

# 网络配置
REQUEST_TIMEOUT=30
RETRY_COUNT=3

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# 模型配置
DEFAULT_BATCH_SIZE=1
DEFAULT_EPOCHS=1
DEFAULT_WINDOWS_SIZE=3

# 支持的彩票类型
SUPPORTED_LOTTERY_TYPES=ssq,dlt,qxc,pls,kl8,sd

# 训练配置
SAVE_EPOCH_INTERVAL=100
SAVE_TIME_INTERVAL=600

# GPU配置
USE_GPU=auto
GPU_MEMORY_GROWTH=true

# 代理配置（如需要）
HTTP_PROXY=
HTTPS_PROXY=